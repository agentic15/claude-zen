{
  "permissions": {
    "allow": [
      "Read(**)",
      "Glob",
      "Grep",
      "Bash(npm run:*)",
      "Bash(git status:*)",
      "Bash(git branch:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git remote get-url:*)",
      "Bash(git rev-parse:*)",
      "Bash(git describe:*)",
      "Bash(npx agentic15 status:*)",
      "Bash(npx agentic15 visual-test:*)",
      "Edit(./Agent/**)",
      "Write(./Agent/**)",
      "Edit(./scripts/**)",
      "Write(./scripts/**)",
      "Write(./.claude/PROJECT-PLAN.json)"
    ],
    "ask": [
      "Edit(./package.json)",
      "Edit(./tsconfig.json)",
      "Write(./config/**)",
      "Edit(**/*.md)",
      "Write(**/*.md)",
      "Edit(./docs/**)",
      "Write(./docs/**)",
      "Edit(./README.md)",
      "Edit(./CHANGELOG.md)"
    ],
    "deny": [
      "Edit(./.env*)",
      "Write(./.env*)",
      "Edit(./.claude/PROJECT-PLAN.json)",
      "Edit(./.claude/settings.json)",
      "Edit(./.claude/TASK-TRACKER.json)",
      "Bash(agentic15:*)",
      "Bash(npx agentic15 plan:*)",
      "Bash(npx agentic15 task:*)",
      "Bash(npx agentic15 complete:*)",
      "Bash(npx agentic15 archive:*)",
      "Bash(npx agentic15 auth:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git checkout:*)",
      "Bash(git merge:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Bash(git cherry-pick:*)",
      "Bash(git stash:*)",
      "Bash(git config:*)",
      "Bash(git init:*)",
      "Bash(git clone:*)",
      "Bash(git pull:*)",
      "Bash(git fetch:*)",
      "Bash(git tag:*)",
      "Bash(gh:*)",
      "Bash(npm run task:*)",
      "Bash(npm run plan:*)",
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Bash(npm install:*)",
      "Bash(npm publish:*)",
      "Bash(psql:*)",
      "Bash(mysql:*)",
      "Bash(sqlite3:*)",
      "Bash(mongosh:*)",
      "Bash(redis-cli:*)",
      "Bash(node ./scripts/**)",
      "Bash(node ./Agent/db/**)",
      "Bash(bash ./scripts/**)",
      "Bash(sh ./scripts/**)"
    ]
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "allowUnsandboxedCommands": false
  },
  "env": {
    "DISABLE_PROMPT_CACHING": "0",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "8192",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1"
  },
  "github": {
    "enabled": true,
    "autoCreate": false,
    "autoUpdate": false,
    "autoClose": false,
    "owner": null,
    "repo": null,
    "comment": "GitHub Issues integration. Configure via 'npx agentic15 auth' or manually in .claude/settings.local.json. Authentication handled by gh CLI (no token needed). Owner/repo auto-detected from git remote."
  },
  "azureDevOps": {
    "enabled": false,
    "autoCreate": false,
    "autoUpdate": false,
    "autoClose": false,
    "organization": null,
    "project": null,
    "comment": "Azure DevOps Work Items integration. Configure in .claude/settings.local.json. Authentication via AZURE_DEVOPS_PAT environment variable. Org/project auto-detected from git remote."
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "node node_modules/@agentic15.com/agentic15-claude-zen/framework/hooks/session-start-context.js"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node node_modules/@agentic15.com/agentic15-claude-zen/framework/hooks/require-active-task.js"
          }
        ]
      },
      {
        "matcher": "Write(./.claude/PROJECT-PLAN.json)",
        "hooks": [
          {
            "type": "command",
            "command": "node node_modules/@agentic15.com/agentic15-claude-zen/framework/hooks/enforce-plan-template.js"
          }
        ]
      }
    ]
  }
}
