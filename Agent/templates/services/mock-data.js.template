/**
 * Helper: Get user by email (for auth simulation)
 */
export function findUserByEmail(email) {
  return mockData.users.find(u => u.email === email);
}

/**
 * Helper: Get orders for specific user
 */
export function getOrdersByUser(userId) {
  return mockData.orders.filter(o => o.userId === userId);
}

/**
 * Helper: Get products by category
 */
export function getProductsByCategory(category) {
  return mockData.products.filter(p => p.category === category);
}
