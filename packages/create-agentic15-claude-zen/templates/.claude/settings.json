{
  "permissions": {
    "allow": [
      "Read(**)",
      "Glob",
      "Grep",
      "Bash(npm run:*)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git branch:*)",
      "Edit(./Agent/**)",
      "Write(./Agent/**)",
      "Edit(./scripts/**)",
      "Write(./scripts/**)",
      "Write(./.claude/PROJECT-PLAN.json)"
    ],
    "ask": [
      "Edit(./package.json)",
      "Edit(./tsconfig.json)",
      "Write(./config/**)",
      "Edit(**/*.md)",
      "Write(**/*.md)",
      "Edit(./docs/**)",
      "Write(./docs/**)",
      "Edit(./README.md)",
      "Edit(./CHANGELOG.md)"
    ],
    "deny": [
      "Edit(./.env*)",
      "Write(./.env*)",
      "Edit(./.claude/PROJECT-PLAN.json)",
      "Edit(./.claude/settings.json)",
      "Edit(./.claude/hooks/**)",
      "Write(./.claude/hooks/**)",
      "Edit(./.claude/TASK-TRACKER.json)",
      "Read(./.claude/POST-INSTALL.md)",
      "Read(./docs/**)",
      "Bash(agentic15:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(npm run task:*)",
      "Bash(npm run plan:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Bash(npm install:*)",
      "Bash(npm publish:*)",
      "Bash(git push --force:*)",
      "Bash(git merge:*)",
      "Bash(psql:*)",
      "Bash(mysql:*)",
      "Bash(sqlite3:*)",
      "Bash(mongosh:*)",
      "Bash(redis-cli:*)",
      "Bash(node ./scripts/**)",
      "Bash(node ./Agent/db/**)",
      "Bash(bash ./scripts/**)",
      "Bash(sh ./scripts/**)",
      "WebFetch",
      "WebSearch"
    ]
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "allowUnsandboxedCommands": false
  },
  "env": {
    "DISABLE_PROMPT_CACHING": "0",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "8192",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1"
  },
  "github": {
    "enabled": true,
    "autoCreate": true,
    "autoUpdate": true,
    "autoClose": true,
    "token": null,
    "owner": null,
    "repo": null,
    "comment": "GitHub Issues integration. Configure in .claude/settings.local.json or via environment variables (GITHUB_TOKEN, GITHUB_OWNER, GITHUB_REPO). Owner/repo auto-detected from git remote if not set."
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/session-start-context.js"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/require-active-task.js"
          }
        ]
      },
      {
        "matcher": "Write(./.claude/PROJECT-PLAN.json)",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/enforce-plan-template.js"
          }
        ]
      }
    ]
  }
}
